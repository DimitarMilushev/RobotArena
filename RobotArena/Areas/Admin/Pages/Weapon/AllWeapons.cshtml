@page
@model AllWeaponsModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Weapons</h1>

<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Weapon[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weapon[0].DamagePoints)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weapon[0].Durability)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weapon[0].DurabilityLossAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weapon[0].ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weapon[0].CriticalAttackMode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weapon[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Weapon)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DamagePoints)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Durability)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DurabilityLossAmount)
                </td>
                <td>
                    <img src="@(item.ImageUrl)" alt="HTML5 Icon" style="width:128px;height:128px;">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CriticalAttackMode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price) <span style="font-family:Georgia;color:darkgoldenrod">₡</span>                    
                </td>
                <td>
                    <a class="btn btn-success" asp-page="./EditWeapon" asp-route-id="@item.Id">Edit</a>
                    <a class="btn" style="background-color:purple;color:white" asp-page="./DetailsWeapon" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-danger" asp-page="./DeleteWeapon" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
