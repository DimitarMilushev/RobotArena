@page

@model CreateWeaponModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create a weapon</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Weapon.Name" class="control-label"></label>
                <input asp-for="Weapon.Name" class="form-control" />
                <span asp-validation-for="Weapon.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weapon.DamagePoints" class="control-label"></label>
                <input asp-for="Weapon.DamagePoints" class="form-control" />
                <span asp-validation-for="Weapon.DamagePoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weapon.DurabilityLossAmount" class="control-label"></label>
                <input asp-for="Weapon.DurabilityLossAmount" class="form-control" />
                <span asp-validation-for="Weapon.DurabilityLossAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weapon.ImageUrl" class="control-label"></label>
                <input asp-for="Weapon.ImageUrl" class="form-control" />
                <span asp-validation-for="Weapon.ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weapon.CriticalAttackMode" class="control-label"></label>
                <input asp-for="Weapon.CriticalAttackMode" />
                <div class="checkbox">
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Weapon.Price" class="control-label"></label>
                <input asp-for="Weapon.Price" class="form-control" />
                <span asp-validation-for="Weapon.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./AllWeapons">Back to List</a>
</div>

