@page
@model AllCreepsModel

@{
    ViewData["Title"] = "AllCreeps";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Creeps</h1>

<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Creep[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Creep[0].ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Creep[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Creep[0].Health)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Creep[0].Damage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Creep[0].Bounty)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Creep)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <img src="@(item.ImageUrl)" alt="HTML5 Icon" style="width:128px;height:128px;">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Health)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Damage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bounty) <span style="font-family:Georgia;color:darkgoldenrod">₡</span>
            </td>
            <td>
                <a class="btn btn-success" asp-page="./EditCreep" asp-route-id="@item.Id">Edit</a>
                <a class="btn" style="background-color:purple;color:white" asp-page="./DetailsCreep" asp-route-id="@item.Id">Details</a>
                <a class="btn btn-danger" asp-page="./DeleteCreep" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
