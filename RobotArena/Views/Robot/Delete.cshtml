@model RobotDetailsViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="color:red">Are you sure you want to delete @(Model.Name)?</h1>
<div>

    @Html.DisplayForModel("RobotDisplayTemplate")
