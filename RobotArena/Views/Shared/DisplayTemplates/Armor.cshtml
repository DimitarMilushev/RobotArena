@model IEnumerable<ArmorDetailsViewModel>
@foreach (var armor in Model){
        <div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => armor.Name)
                </dt>
                <dd>
                    @(armor.Name)
                </dd>
                <dt>
                   
                </dt>
                <dd>
                    <img src="@(armor.ImageUrl)" alt="HTML5 Icon" style="width:128px;height:128px;">
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => armor.ArmorPoints)
                </dt>
                <dd>
                    @(armor.CurrentArmor)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => armor.Durability)
                </dt>
                <dd>
                    @(armor.Durability)
                </dd>
            </dl>
        </div>   
}

