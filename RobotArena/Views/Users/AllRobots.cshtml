@model IEnumerable<RobotPartialInfoViewModel>

@{
    ViewData["Title"] = "AllRobots";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AllRobots</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wins)
            </th>
            <th>
              Stats
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <img src="@(item.ImageUrl)" alt="HTML5 Icon" style="width:128px;height:128px;">
            </td>
            <td>
                <span style="color:limegreen">@item.Wins</span>/<span style="color:red">@item.Losses</span>
            </td>            
            <td>
                <a class="btn btn-success" asp-controller="Robot" asp-action="Edit" asp-route-id="@(item.Id)">Edit</a>
                <a class="btn" style="background-color:purple;color:white" asp-controller="Robot" asp-action="Details" asp-route-id="@(item.Id)">Details</a>
                <a class="btn btn-danger" asp-controller="Robot" asp-action="Delete" asp-route-id="@(item.Id)">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
